<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 请求服务器进度条样式 -->
    <style name="myDialogTheme2" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <!-- 请求服务器进度条样式 -->
    <style name="myProgressBarStyleLarge">
        <item name="android:indeterminateDrawable">@drawable/rotate_loading_icon</item>
        <item name="android:indeterminateDuration">1500</item>
        <item name="android:minWidth">50dp</item>
　　    <item name="android:maxWidth">50dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
    </style>

    <!-- 刚进入app解决黑屏现象，需要为首个启动Activity设置此Style -->
    <style name="StartAppTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
